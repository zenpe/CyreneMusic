<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 允许本地代理服务器的 HTTP 明文流量 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
    </domain-config>

    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">sycdn.kuwo.cn</domain>
        <domain includeSubdomains="true">kuwo.cn</domain>
        <domain includeSubdomains="true">music.126.net</domain>
        <domain includeSubdomains="true">qq.com</domain>
        <domain includeSubdomains="true">kugou.com</domain>
    </domain-config>
    
    <!-- 默认配置：其他域名仅允许 HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
